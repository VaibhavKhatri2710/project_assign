{%
  set classes = [
    'm-block',
    'm-block--' ~ configuration.provider|clean_class,
    'm-block--' ~ plugin_id|clean_class,
    'm-block__' ~ content['#block_content'].info.value|replace({' ':'-'})|lower,
		'm-' ~ content['#block_content'].info.value|replace({' ':'-'})|lower
  ]
%}

<div{{attributes.addClass(classes)}}>

	{% block content %}
		{{ content }}
	{% endblock %}
</div>